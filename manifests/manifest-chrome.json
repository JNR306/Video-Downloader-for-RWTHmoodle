{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.2",
  "manifest_version": 3,
  "icons": {
    "16": "icons/IconColor16.png",
    "48": "icons/IconColor48.png",
    "128": "icons/IconColor128.png"
  },
  "default_locale": "en",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/IconLight16.png",
      "32": "icons/IconLight32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://engage.streaming.rwth-aachen.de/search/episode.json?id=*"
  ],
  "permissions": [
    "webRequest",
    "downloads",
    "storage"
  ]
}