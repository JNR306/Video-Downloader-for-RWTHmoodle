{
  "name": "Video Downloader for RWTHmoodle",
  "description": "Adds the ability to easily download the Opencast Videos in RWTHmoodle.",
  "version": "1.2",
  "manifest_version": 3,
  "icons": {
    "16": "icons/IconColor16.png",
    "48": "icons/IconColor48.png",
    "128": "icons/IconColor128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/IconLight16.png",
      "32": "icons/IconLight32.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "host_permissions": [
    "*://engage.streaming.rwth-aachen.de/search/episode.json?id=*"
  ],
  "permissions": [
    "webRequest",
    "downloads"
  ]
}